<h1>Admin::Events#new</h1>

<%= form_with model: @event, url:admin_events_path, local:true do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :name %>
  <h4>本文</h4>
  <%= f.text_area :introduction %>
  <h4>開催場所</h4>
  <%= f.text_field :place %>
  <h4>定員</h4>
  <%= f.number_field :capacity %>
  <h4>開催日</h4>
  <%= f.date_select :day %>
  <h4>距離</h4>
  <%= f.number_field :distance %>

  <%= f.submit '作成' %>
<% end %>

