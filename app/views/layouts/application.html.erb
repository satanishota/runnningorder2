<!DOCTYPE html>
<html>
  <head>
    <title>RunningOrder1</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="header1">
    <% if admin_signed_in? %>

      <ul class="header2">
        <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>

        <%= link_to "トップ画面", admin_top_path %>

        <%= link_to "ユーザー一覧", admin_users_path %>

        <%= link_to "主催者一覧", admin_organizers_path %>

      </ul>
    <% elsif organizer_signed_in? %>
    <%= link_to "ログアウト", destroy_organizer_session_path, method: :delete %>
    <%= link_to "大会一覧", organizer_events_path %>
    <%= link_to "トップ画面", organizer_top_path %>
    </ul>
      <% @organizerh = current_organizer.name %>
    <ul><%= @organizerh %>様</ul>

    <% elsif user_signed_in? %>

      <ul class="header2">
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>

        <%= link_to "マイページ", root_path %>

        <%= link_to "大会一覧", events_path %>

        <%= link_to "エントリー一覧", entrys_path %>
      </ul>
      <% @userh = current_user.name %>
      <ul><%= @userh %>選手</ul>

    <% else %>

      <ul class="header2" >
        <%= link_to "ユーザー新規登録", new_user_registration_path %>

        <%= link_to "ユーザーログイン", new_user_session_path %>

        <%= link_to "About", about_path %>

      </ul>
    <% end %>
    </nav>
    <%= yield %>

  </body>
</html>
