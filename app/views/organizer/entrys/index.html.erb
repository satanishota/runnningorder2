<h1>エントリー一覧（タイム順）</h1>

<p>
  <%= link_to "ランク順へ進む", organizer_rank_path(:event_id => @event.id) %>
<p>

  <p><%= @enter %>人/ <%= @event.capacity %></p>
  <p><%= @event.name %></p>

<%= form_tag(organizer_update_all_path, method: "patch") do %>
<%= hidden_field_tag :event_id, @event.id%>
   <%= submit_tag "一括更新" %>
<% end %>


<table>
    <tr>
      <th>順位</th>
      <th>タイム</th>
      <th>ユーザー名</th>

    </tr>
    <% @entrys.each.with_index(1) do |entry, i| %>
    <tr>
      <th><%= i %></th>
      <th><%=entry.time%></th>
      <% if entry.event.organizer_id == current_organizer.id %>
      <th>
      <%= link_to entry.user.name, edit_organizer_entry_path(entry.id) %>
      </th>
      <% else %>
      <th>
        <%= entry.user.name %>

　    </th>
　    <% end %>

　    </tr>
    <% end %>
  </table>
