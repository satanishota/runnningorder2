<h1>Public::Events#index</h1>

<%= form_tag(search_event_path, method: "get") do %>

  <%= text_field_tag :from %>
  ~
  <%= text_field_tag :to %>

  <%= submit_tag "絞り込み" %>
<% end %>

<% @events.each do |event| %>
  <p>タイトル</p>
  <p>
    <%= link_to event.name, event_path(event.id) %>
  <p>
  <p>開催日</p>
  <p><%= event.day %><p>
  <p>距離</p>
  <p><%= event.distance %>㎞<p>
<% end %>